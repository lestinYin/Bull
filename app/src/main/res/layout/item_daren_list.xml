<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    >
    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textColor="#ff333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:40"
        android:textColor="#ff999999"
        android:textSize="12sp"
        android:layout_below="@id/tv_today"
        />

    <TextView
        android:id="@+id/tv_raiders_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="环境&amp;服务，整体环境不错，交通很方便哦，人很多，进入包间有各种酒水饮料套餐，我们的包房是粉色的，很炫很炫 曲目&amp;音效，整体曲目比较新，好多粤语歌，开心，包房整体的音效不错"
        android:textColor="#ff353b50"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/tv_today"
        android:layout_marginLeft="@dimen/dp_13"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_daren_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_raiders_detail"
        android:overScrollMode="never"
        android:layout_marginStart="@dimen/dp_37"
        />
    <TextView
        android:id="@+id/tv_home_raiders_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019/6/21"
        android:textColor="#ff777777"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/dp_46"
        android:layout_below="@id/rv_daren_list"
        android:layout_marginTop="@dimen/dp_20"

        />
    <ImageView
        android:id="@+id/tv_jubao_raiders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/jubao_raiders"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_home_raiders_time"
        />
    <TextView
        android:id="@+id/tv_home_raiders_like_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="206"
        android:textColor="#ff353b50"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/home_raiders_like"
        android:layout_alignTop="@id/tv_home_raiders_time"
        android:drawablePadding="@dimen/dp_6"
        android:layout_toLeftOf="@id/tv_jubao_raiders"
        android:layout_marginRight="@dimen/dp_5"
        />

</RelativeLayout>