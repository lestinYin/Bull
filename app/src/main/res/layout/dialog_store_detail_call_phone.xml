<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_home_store_bg"

    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拨打电话时需告知对方消息来自Sao APP"
        android:textColor="#ff373d52"
        android:textSize="14sp"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_call_phone_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-1511111111"
        android:textColor="#ff657cc0"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/tv_call_phone_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-62758851"
        android:textColor="#ff657cc0"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可以：预定位置 询问路线 咨询价格"
        android:textColor="#ff818181"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店家沟通语种：英语 中文 法语"
        android:textColor="#ff818181"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        />
</LinearLayout>