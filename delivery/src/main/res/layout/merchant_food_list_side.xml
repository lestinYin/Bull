<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vTitle_root"
    android:layout_width="@dimen/dp_92"
    android:layout_height="@dimen/dp_52"
    tools:ignore="MissingConstraints"

    >
    <TextView
        android:id="@+id/vTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/choice_food_tag_sale"
        android:layout_marginLeft="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_13"
         />
    <TextView
        android:id="@+id/tv_right_circle"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:text="1"
        style="@style/tab_text"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:background="@drawable/shape_circle_red_bg"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        />

</RelativeLayout>