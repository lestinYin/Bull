<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_home_store_bg"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:elevation="@dimen/dp_4"
    >


        <ImageView
            android:id="@+id/iv_tuijian_pic"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_70"
            android:background="@mipmap/delivery_home_banner"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"

            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啤酒+饮料"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_tuijian_pic"
            android:layout_alignTop="@id/iv_tuijian_pic"
            android:layout_marginLeft="@dimen/dp_15"

            />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐包含3瓶啤酒2瓶饮料"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_below="@id/tv_type"
            android:layout_alignLeft="@id/tv_type"
            android:layout_marginTop="@dimen/dp_9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textColor="#ffd10404"
            android:textSize="21sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@mipmap/meijin"
            android:gravity="bottom"
            android:drawablePadding="@dimen/dp_2"
            android:layout_alignTop="@id/tv_des"
            />
</RelativeLayout>