<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_6"
    android:background="@drawable/shape_color_white_bg"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_renmingbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@mipmap/renminbi_true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_renmingbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/color_d10404"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/iv_renmingbi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_5"
        />

    <TextView
        android:id="@+id/tv_guize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:text="满10减5元"
        android:textColor="@color/color_999999"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/tv_renmingbi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:text="2019.08.19—2019.09.13"
        android:textColor="@color/color_999999"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_guize"
        app:layout_constraintTop_toBottomOf="@id/tv_guize"

        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_f3f3f3"
        app:layout_constraintTop_toBottomOf="@id/iv_renmingbi" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_line">


        <View
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_semi_circle_top" />

        <!--<View-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@drawable/shape_bg_dotted_line"-->
        <!--android:layerType="software"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="全场通用"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <View
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_semi_circle_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_card_bg"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_2"
            android:text="立即使用"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
