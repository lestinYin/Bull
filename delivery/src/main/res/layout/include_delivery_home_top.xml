<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="329dp"
    android:background="@drawable/shape_delivery_home_bg">


    <RelativeLayout
        android:id="@+id/rl_delivery_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@drawable/shape_delivery_search">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:drawableLeft="@mipmap/delivery_bar_search_icon"
            android:drawablePadding="@dimen/dp_16"
            android:text="搜索您想要找的美食"
            android:textColor="#ff999999"
            android:textSize="14sp"

            />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_73"
        android:background="@mipmap/delivery_green_ye_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_99"
        android:background="@mipmap/deliverry_green_ye_right" />

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/rollpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_146"
        android:layout_below="@id/rl_delivery_search"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_27"
        />
    <TextView
        android:id="@+id/tv_delivery_home_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rollpager"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableTop="@mipmap/delivery_food_icon"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_horizontal"
        android:text="美食"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rollpager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableTop="@mipmap/delivery_drink_icon"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_horizontal"
        android:text="饮品"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rollpager"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:drawableTop="@mipmap/delivery_market_icon"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_horizontal"
        android:text="超市"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

</RelativeLayout>