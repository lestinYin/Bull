<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_home_store_bg"
    android:elevation="@dimen/dp_4"
    android:layout_margin="@dimen/dp_4"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/iv_staff_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/staff_style"
         />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小红"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/iv_staff_style"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/like_tree"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_15"
        />

</android.support.constraint.ConstraintLayout>