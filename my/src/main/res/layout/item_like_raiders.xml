<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_radis_shadow_bg"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_store_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:background="@mipmap/like_raiders_bg"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南锣鼓巷的餐厅哦～"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_46"
        />
    <TextView
        android:id="@+id/tv_store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好迪KTV（胡志明店）"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/iv_store_bg"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_store_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="迷餐厅"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_store_title"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_store_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交通方便，环境舒适"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_store_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:background="@mipmap/my_head_default"
        app:layout_constraintTop_toBottomOf="@id/tv_store_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sandy小花猫咪"
        android:textColor="@color/color_666666"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@id/iv_head_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_head_img"
        app:layout_constraintLeft_toRightOf="@id/iv_head_img"
        android:layout_marginLeft="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1987"
        android:textColor="@color/color_666666"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        android:layout_marginRight="@dimen/dp_10"
        android:drawableLeft="@mipmap/dianzan"
        android:drawablePadding="@dimen/dp_3"
        />


</android.support.constraint.ConstraintLayout>