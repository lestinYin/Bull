<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radis_shadow_noleftright_bg"
        android:paddingBottom="@dimen/dp_30">

        <HorizontalScrollView
            android:id="@+id/horizental_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:layout_below="@id/store_detail_line_one"
            android:layout_marginTop="@dimen/dp_20"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_horizental_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_head1"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toRightOf="@id/tv_store_detail_daka_number" />

        <ImageView
            android:id="@+id/iv_head2"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head1" />

        <ImageView
            android:id="@+id/iv_head3"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head2" />

        <ImageView
            android:id="@+id/iv_head4"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head3" />

        <ImageView
            android:id="@+id/iv_store_detail_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizental_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/store_detail_call_phone" />


        <LinearLayout
            android:id="@+id/ll_store_detail_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_renjun"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_mastercard" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_visa" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_chinese" />

            <TextView
                android:id="@+id/tv_store_detail_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:textColor="#ff353b50"
                android:textSize="12sp"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_store_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="好迪KTV"
            android:textColor="#ff353b50"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/tv_store_detail_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_store_detail_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_store_detail_title"
            android:text="#KTV#"
            android:textColor="#ff9b9b9b"
            android:textSize="12sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_store_detail_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="综合指数103"
            android:textColor="#ff777777"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_store_detail_daka_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizental_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableLeft="@mipmap/store_detail_phone"
            android:drawablePadding="@dimen/dp_9"
            android:text="1365次打卡"
            android:textColor="#ff353b50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_store_detail_yinye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_daka_number"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:drawableLeft="@mipmap/store_detail_yinye"
            android:drawablePadding="@dimen/dp_9"
            android:text="营业中 | 18:00-02:00"
            android:textColor="#ff353b50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_store_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_yinye"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_6"
            android:background="@drawable/shape_color_primary_bg"
            android:drawableLeft="@mipmap/home_store_location"
            android:drawablePadding="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:text="胡志明.温莎KTV"
            android:textColor="#ff777777"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_store_detail_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_store_detail_location"
            android:layout_toRightOf="@id/tv_store_detail_location"
            android:text="800米"
            android:textColor="#ff777777"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_store_detail_renjun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_line_two"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:text="人均：$120人"
            android:textColor="#ff353b50"
            android:textSize="12sp" />

        <View
            android:id="@+id/store_detail_line_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/tv_store_detail_title"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/color_E1E1E1" />

        <View
            android:id="@+id/store_detail_line_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/tv_store_detail_location"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/color_E1E1E1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_caidan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_caidan"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <include
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1" />

            <include
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1" />

            <include
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:text="全部"
            android:textColor="#ff57bcfa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_caidan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="菜单"
            android:textColor="@color/color_333333"
            android:textSize="15sp"

            />
    </RelativeLayout>
    <View
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f3f3f3"
        android:layout_below="@id/rl_caidan"
        android:layout_marginTop="@dimen/dp_15"
        />
    <RelativeLayout
        android:id="@+id/rl_fencai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_one">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fencai"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_fengcai_one"
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1" />

            <include
                android:id="@+id/include_fengcai_two"
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1" />

            <include
                android:id="@+id/include_fengcai_three"
                layout="@layout/include_store_list_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:text="更多"
            android:textColor="#ff57bcfa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fencai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="员工风采"
            android:textColor="@color/color_333333"
            android:textSize="15sp"

            />
    </RelativeLayout>
    <View
        android:id="@+id/line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f3f3f3"
        android:layout_below="@id/rl_fencai"
        android:layout_marginTop="@dimen/dp_15"
        />

    <RelativeLayout
        android:id="@+id/rl_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_two">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:text="更多"
            android:textColor="#ff57bcfa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="消费推荐"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/iv_tuijian_pic"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_70"
            android:background="@mipmap/delivery_home_banner"
            android:layout_below="@id/tv_tuijian"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"

            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啤酒+饮料"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_tuijian_pic"
            android:layout_alignTop="@id/iv_tuijian_pic"
            android:layout_marginLeft="@dimen/dp_15"

            />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐包含3瓶啤酒2瓶饮料"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_below="@id/tv_type"
            android:layout_alignLeft="@id/tv_type"
            android:layout_marginTop="@dimen/dp_9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textColor="#ffd10404"
            android:textSize="21sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@mipmap/meijin"
            android:gravity="bottom"
            android:drawablePadding="@dimen/dp_2"
            android:layout_alignTop="@id/tv_des"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f3f3f3"
        android:layout_below="@id/rl_tuijian"
        android:layout_marginTop="@dimen/dp_15"
        />
    <!--<View-->
    <!--android:id="@+id/store_detail_line_three"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp_1"-->
    <!--android:layout_below="@id/ll_store_detail_pay"-->
    <!--android:layout_marginLeft="@dimen/dp_15"-->
    <!--android:layout_marginTop="@dimen/dp_15"-->
    <!--android:layout_marginRight="@dimen/dp_15"-->
    <!--android:background="@color/color_E1E1E1" />-->


    <TextView
        android:id="@+id/tv_store_detail_daren_number"
        style="@style/tab_text"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@id/line_three"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_29"
        android:text="达人微攻略（52）"
        android:textColor="#ff353b50"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_store_detail_daren_number"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />
</RelativeLayout>