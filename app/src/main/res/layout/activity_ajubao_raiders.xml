<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f3f3f3"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_jubao_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_155"
                android:layout_below="@id/rv_jubao"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请详细描述举报内容，Tours将对您的信息保密"
                android:padding="@dimen/dp_10"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line_two"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@null"
                android:hint="请留下手机号，手机号仅对Tours工作人员可见"
                android:textColor="#ff999999"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <RelativeLayout
                android:id="@+id/rl_raiders_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_15">

                <ImageView
                    android:id="@+id/iv_raiders_head"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@mipmap/my_head_default" />

                <TextView
                    android:id="@+id/tv_raiders_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_toEndOf="@id/iv_raiders_head"
                    android:text="Sandy小花猫咪"
                    android:textColor="#ff353b50"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_toEndOf="@id/iv_raiders_head"
                    android:text="本店打卡203"
                    android:textColor="#ff777777"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toEndOf="@id/tv_raiders_name"
                    android:background="@drawable/shape_home_store_tag_bg"
                    android:text="全能玩乐达人"
                    android:textColor="#ff6875fc"
                    android:textSize="8sp"

                    />

                <TextView
                    android:id="@+id/tv_home_raiders_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:text="600米"
                    android:textColor="#ff777777"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_home_raiders_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_toLeftOf="@id/tv_home_raiders_distance"
                    android:background="@drawable/shape_home_store_location_bg"
                    android:drawableLeft="@mipmap/home_store_location"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="温莎KTV"
                    android:textColor="#ff777777"
                    android:textSize="10sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_raiders_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_raiders_head"
                android:layout_marginStart="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_24"
                android:text="环境&amp;服务，整体环境不错，交通很方便哦，人很多，进入包间有各种酒水饮料套餐，我们的包房是粉色的，很炫很炫 曲目&amp;音效，整体曲目比较新，好多粤语歌，开心，包房整体的音效不错"
                android:textColor="#ff353b50"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_phone"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/shape_color_primary_bg"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="提交举报"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/dp_30"
                />

            <View
                android:id="@+id/view_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_below="@id/et_phone"
                android:background="@color/color_f3f3f3" />

            <View
                android:id="@+id/view_line_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_below="@id/et_jubao_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/color_f3f3f3" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_jubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_raiders_detail"
                android:layout_marginStart="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_24"
                android:overScrollMode="never"


                />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/color_f3f3f3"
        app:navigationIcon="@mipmap/my_back" />
</RelativeLayout>