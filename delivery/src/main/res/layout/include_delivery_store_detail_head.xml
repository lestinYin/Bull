<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    >

    <RelativeLayout
        android:background="@drawable/shape_white_radis_shadow_bg"
        android:id="@+id/rl_store_head"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Coffee(胡志明店)"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Delivery: 30min"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:layout_below="@id/tv_store_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7"
        android:drawableLeft="@mipmap/store_detail_shijian"
        android:drawablePadding="@dimen/dp_4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Delivery: 30min"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_16"
        android:drawableLeft="@mipmap/store_detail_renqi"
        android:drawablePadding="@dimen/dp_4"
        android:layout_alignBaseline="@id/tv_shijian"
        android:layout_toRightOf="@id/tv_shijian"

        />
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Notice：欢迎光临Say Coffee，我们将竭力为您提供美食
大定位冻结为冰的卷笔刀温暖的你忘记你举步维艰并不觉得
定位不到回报我和爸爸对我好的那句温暖的围巾年纪能忘逗
你玩你的无奈都能无奈的我就觉得我家大宝的博文红包第五
部。"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:layout_below="@id/tv_shijian"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="@dimen/dp_15"
        />
    <RelativeLayout
        android:id="@+id/rl_show_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        >
        <ImageView
            android:id="@+id/iv_arrow_show_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/store_detail_arrow_down"
            android:padding="@dimen/dp_11"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_delivery_tag_manjian"
            style="@style/text_333333"
            android:drawableLeft="@mipmap/delivery_manjian"
            android:drawablePadding="@dimen/dp_4"
            android:text="满30减10，满55减20，满100减30"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_delivery_tag_zhekou"
            style="@style/text_333333"
            android:layout_below="@id/tv_delivery_tag_manjian"
            android:layout_marginTop="@dimen/dp_7"
            android:drawableLeft="@mipmap/delivery_zhekou"
            android:drawablePadding="@dimen/dp_4"
            android:text="折扣商品4.85折起"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_delivery_tag_new_user"
            style="@style/text_333333"
            android:layout_below="@id/tv_delivery_tag_zhekou"
            android:layout_marginTop="@dimen/dp_7"
            android:drawableLeft="@mipmap/delivery_new_user"
            android:drawablePadding="@dimen/dp_4"
            android:text="新用户立减17元（本优惠于新人首单红包不可同享）"
            android:textSize="10sp" />
        <!--<ImageView-->
            <!--android:id="@+id/iv_show_tag"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/store_detail_arrow_up"-->
            <!--android:padding="@dimen/dp_10"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--/>-->
    </LinearLayout>

    </RelativeLayout>
    <ImageButton
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_59"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/delivery_icon_default"
        android:elevation="@dimen/dp_10"
        android:translationZ="@dimen/dp_10"
        />
</RelativeLayout>