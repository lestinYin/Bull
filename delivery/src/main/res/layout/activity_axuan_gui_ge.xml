<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AXuanGuiGe"
    android:background="@color/transparent_five"
    android:id="@+id/root_choice_speci"
    tools:ignore="MissingConstraints"
    >
    <RelativeLayout
        android:id="@+id/rl_spci_content"
        android:layout_width="match_parent"
        android:layout_height="294dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_color_white_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_speci_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超值大方双人餐"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/tv_spec_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辣度:"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/tv_speci_title"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected:不辣"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:background="@color/color_f3f3f3"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_59"
            />

        <com.lestin.yin.widget.FlowLayout
            android:id="@+id/fl_speci"
            android:layout_below="@id/tv_spec_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_selected"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_17"
            />

        <TextView
            android:id="@+id/vPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_d10404"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="118"
            android:layout_toRightOf="@id/tv_total"
            android:layout_alignBaseline="@id/tv_total"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_color_primary_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="+ Add to cart"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            style="@style/tab_text"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"

            />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/choice_specification_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_spci_content"
        android:layout_marginTop="@dimen/dp_26"

        />
    

</android.support.constraint.ConstraintLayout>