<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_bar_delivery_home"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/shape_delivery_home_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@mipmap/delivery_home_back" />

        <RelativeLayout
            android:id="@+id/tool_bar_delivery_home_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_44"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_street_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/delivery_title_location"
                android:drawablePadding="@dimen/dp_5"
                android:text="xxx街道"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/delivery_title_right_message" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Food  "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toRightOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/tool_bar_delivery_home_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_category"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_delivery_search"
            android:layout_marginLeft="@dimen/dp_20"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:drawableLeft="@mipmap/delivery_bar_search_icon"
                android:drawablePadding="@dimen/dp_16"
                android:text="搜索您想要找的美食"
                android:textColor="#ff999999"
                android:textSize="14sp"

                />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.Toolbar>