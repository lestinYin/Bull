<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.future.taurus.ui.home.ATop">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_bg"

        />
    <TextView
        android:id="@+id/tv_theme"
        style="@style/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:drawablePadding="@dimen/dp_7"
        android:drawableRight="@mipmap/primary_arrow_down"
        android:text="城市夜8点TOP5"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:src="@mipmap/white_arrow_back"
        android:paddingRight="@dimen/dp_10"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@mipmap/delivery_store_clock" />

    <RelativeLayout
        android:layout_below="@id/iv_back"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_height="match_parent"
        android:background="@drawable/shape_store_detail_bg"
        >

    <android.support.design.widget.TabLayout
        android:id="@+id/lay_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="@dimen/dp_3"
        app:tabTextColor="@color/color_777777"
        app:tabSelectedTextColor="@color/colorPrimary"
        />
    <!--app:tabSelectedTextColor="@color/color_666666"-->
    <!--app:tabTextAppearance="@style/tab_text"-->

     <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_tabs"
        />
    </RelativeLayout>

</RelativeLayout>
