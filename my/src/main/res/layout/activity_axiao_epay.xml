<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AXiaoEPay"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_f3f3f3"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:padding="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/white"
        app:contentInsetStartWithNavigation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:src="@mipmap/my_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/xiaoe_pay"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_ic"
            android:layout_width="@dimen/dp_111"
            android:layout_height="@dimen/dp_111"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_jinniu_mianmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金牛未来免密支付"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_ic"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/tv_xiangqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务详情"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            android:layout_below="@id/tv_jinniu_mianmi"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="215dp"
            android:layout_height="42dp"
            android:text=" 当商户发生消费后，商户将自动
    扣款并通知你，无需密码验证"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignBaseline="@id/tv_xiangqing"
            android:gravity="right"
            />
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f3f3f3"
            android:layout_below="@id/tv_xiangqing"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            android:layout_below="@id/view_line"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="167******05"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_line"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看《付款授权服务协议》"
        android:textColor="#ff999999"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="同意协议并开通免密支付"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_colorprimary_solid_bg"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
</LinearLayout>