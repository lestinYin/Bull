<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.AStoreComment"
    android:layout_gravity="bottom"
    android:id="@+id/rl_store_comment_root"
    android:background="@color/transparent_five"
    >
    <RelativeLayout
        android:id="@+id/rl_store_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_store_detail_bg"
        >
        <TextView
            android:id="@+id/tv_store_coment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="好迪KTV"
            android:textColor="#ff353b50"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/tv_store_coment_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_store_coment_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_store_coment_title"
            android:text="#KTV#"
            android:textColor="#ff9b9b9b"
            android:textSize="12sp"
            />
        <RelativeLayout
            android:id="@+id/rl_store_comment_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_coment_tag"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/tv_store_comment_number"
                android:layout_width="46dp"
                android:layout_height="20dp"
                android:text="17 评论"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_toLeftOf="@id/tv_store_comment_number"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_D8D8D8"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_store_comment_number"
                android:background="@color/color_D8D8D8"
                />


        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_store_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_below="@id/rl_store_comment_number"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="@dimen/dp_54"

            />
        <RelativeLayout
            android:id="@+id/rv_comment_bottome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留下你对麦迪KTV的评论吧"
                android:textColor="#ff959595"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + 320"
                android:textColor="#ff959595"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableRight="@mipmap/n_yellow"
                android:drawablePadding="@dimen/dp_7"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:layout_above="@id/rv_comment_bottome"
            android:background="@color/color_D8D8D8"
            />

    </RelativeLayout>

</RelativeLayout>