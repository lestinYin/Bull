<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/shape_home_store_bg"
    android:layout_marginRight="@dimen/dp_49"
    android:layout_marginLeft="@dimen/dp_49"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_home_integral_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dialog_home_integral_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dialog_home_integral_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/tv_home_integral_sao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎加入SAO，送您50积分"
        android:textColor="#ff353b50"
        android:textSize="18sp"
        android:layout_below="@id/iv_home_integral_box"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/tv_home_integral_chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还差XXX可兑换10元充值卡"
        android:textColor="#ff8c8c8c"
        android:textSize="14sp"
        android:layout_below="@id/tv_home_integral_sao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_7"
        />
    <TextView
        android:id="@+id/tv_home_integral_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看积分"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:background="@mipmap/login_bg_true"
        android:gravity="center"
        android:layout_below="@id/tv_home_integral_chongzhi"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分已存入积分钱包"
        android:textColor="#ff9f9f9f"
        android:textSize="11sp"
        android:layout_below="@id/tv_home_integral_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_26"
        />

</RelativeLayout>