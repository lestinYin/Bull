<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <EditText
        android:id="@+id/et_input_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="留下你对麦迪KTV的评论吧"
        android:textColorHint="#ff353b50"
        android:textSize="12sp"
        android:background="@null"
        android:textColor="@color/color_353B50"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:singleLine="true"
        />
    <View
        android:id="@+id/view_comment_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_centerVertical="true"
        android:background="@color/color_D8D8D8"
        android:layout_below="@id/et_input_comment"
        android:layout_marginTop="@dimen/dp_15"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_comment_line"
        android:background="@mipmap/store_comment_smile"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"


        />

    <TextView
        android:id="@+id/tv_commnet_commint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:background="@drawable/shape_store_detail_bt_bg"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3"
        android:layout_below="@id/view_comment_line"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_15"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" + 320"
        android:textColor="#ff959595"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/dp_15"
        android:drawableRight="@mipmap/n_yellow"
        android:drawablePadding="@dimen/dp_7"
        android:layout_below="@id/view_comment_line"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toLeftOf="@id/tv_commnet_commint"
        />
</RelativeLayout>