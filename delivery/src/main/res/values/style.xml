<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/select_radio_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/dp_1</item>
    </style>

    <!--rating bar style-->
    <style name="roomRatingBar" >
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">40px</item>
        <item name="android:maxHeight">40px</item>
        <item name="android:minWidth">40px</item>
        <item name="android:maxWidth">40px</item>
        <item name="android:isIndicator">false</item>

    </style>



</resources>