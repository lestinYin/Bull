<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:background="@color/color_f3f3f3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <HorizontalScrollView
            android:id="@+id/horizental_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/dp_20"
            >

            <LinearLayout
                android:id="@+id/ll_horizental_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_store_detail_daka_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizental_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableLeft="@mipmap/store_detail_phone"
            android:drawablePadding="@dimen/dp_9"
            android:text="1365次打卡"
            android:textColor="#ff353b50"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_head1"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toRightOf="@id/tv_store_detail_daka_number" />

        <ImageView
            android:id="@+id/iv_head2"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head1" />

        <ImageView
            android:id="@+id/iv_head3"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head2" />

        <ImageView
            android:id="@+id/iv_head4"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/horizental_view"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toEndOf="@id/iv_head3" />

        <TextView
            android:id="@+id/tv_store_detail_yinye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_daka_number"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:drawableLeft="@mipmap/store_detail_yinye"
            android:drawablePadding="@dimen/dp_9"
            android:text="营业中 | 18:00-02:00"
            android:textColor="#ff353b50"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_store_detail_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizental_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/store_detail_call_phone" />

        <TextView
            android:id="@+id/tv_store_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_yinye"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_6"
            android:background="@drawable/shape_color_primary_bg"
            android:drawableLeft="@mipmap/home_store_location"
            android:drawablePadding="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:text="胡志明.温莎KTV"
            android:textColor="#ff777777"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_store_detail_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_store_detail_location"
            android:layout_toRightOf="@id/tv_store_detail_location"
            android:text="800米"
            android:textColor="#ff777777"
            android:textSize="12sp" />

        <View
            android:id="@+id/store_detail_line_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_below="@id/tv_store_detail_location"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_f3f3f3" />

        <TextView
            android:id="@+id/tv_store_detail_renjun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_line_two"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:text="人均：$120人"
            android:textColor="#ff353b50"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_store_detail_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_detail_renjun"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_store_detail_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:textColor="#ff353b50"
                android:textSize="12sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_mastercard" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_visa" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_detail_renjun"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/tv_store_detail_pay"
                android:background="@mipmap/store_detail_chinese" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_store_detail_pay"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_f3f3f3"
            />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>