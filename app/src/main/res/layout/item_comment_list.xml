<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_store_comment_list_head"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/iv_store_comment_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sandy小花猫咪"
        android:textColor="#ff353b50"
        android:textSize="12sp"
        android:layout_toRightOf="@id/iv_store_comment_list_head"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已打卡"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_toRightOf="@id/iv_store_comment_list_name"
        android:layout_alignBaseline="@id/iv_store_comment_list_name"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/iv_store_comment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环境&amp;服务，整体环境不错，交通很方便哦，人很多，进入包间有各种酒水饮料套餐，我们的包房是粉色的，很炫很炫 曲目&amp;音效，整体曲目比较新，好多粤语歌，开心，包房整体的音效不错"
        android:textColor="#ff353b50"
        android:textSize="12sp"
        android:layout_below="@id/iv_store_comment_list_head"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_66"
        android:layout_marginRight="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_store_comment_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-9-8"
        android:textColor="#ff777777"
        android:textSize="10sp"
        android:layout_below="@id/iv_store_comment_detail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        />
</RelativeLayout>